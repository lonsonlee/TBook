<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav">

    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/shouye_bar_bottom">

        <RadioButton
            android:id="@+id/radioStore"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector01"
            android:text="书城"
            android:textColor="#ffffff"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textSize="14sp"
            android:button="@null"
            android:checked="true"
            android:layout_height="match_parent"/>

        <RadioButton
            android:id="@+id/radioCart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector02"
            android:text="购物车"
            android:textColor="#ffffff"
            android:gravity="center"
            android:paddingTop="10dp"
            android:button="@null"
            android:textSize="14sp"
            android:layout_height="match_parent"/>

        <RadioButton
            android:id="@+id/radioMine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector03"
            android:text="我的TBOOK"
            android:textColor="#ffffff"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textSize="14sp"
            android:button="@null"
            android:layout_height="match_parent"/>

    </RadioGroup>


</RelativeLayout>
