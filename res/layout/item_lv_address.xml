<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="110dp"
              android:background="#ffffff"
              android:paddingTop="10dp"
              android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/address_item_bg">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="雯雯"
                android:id="@+id/tvReceiveName"
                android:gravity="bottom"
                android:layout_alignParentTop="true"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="133****3333"
                android:textColor="#ffffff"
                android:id="@+id/tvPhone"
                android:textSize="16sp"
                android:gravity="bottom"
                android:layout_toEndOf="@+id/tvReceiveName"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvReceiveName"
                android:layout_marginLeft="30dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/address_item_bg">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="潘家园....潘家园....潘家园....潘家园....潘家园....潘家园....潘家园....潘家园...."
                android:textColor="#ffffff"
                android:id="@+id/tvReceiveAddress"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>


        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/address_divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:paddingLeft="16dp"
        android:background="@drawable/address_item_bg">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:gravity="center_vertical"
            android:text="  默认"
            android:button="@drawable/checked"
            android:id="@+id/radioDefault"
            android:checked="false"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:gravity="center_vertical"
            android:text="  编辑"
            android:button="@drawable/address_ico_edit"
            android:id="@+id/radioEdit"
            android:checked="false"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_toEndOf="@+id/radioDefault"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioDefault"
            android:layout_marginLeft="25dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:gravity="center_vertical"
            android:text="  删除"
            android:button="@drawable/address_ico_del"
            android:id="@+id/radioDelete"
            android:checked="false"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_toEndOf="@+id/radioEdit"
            android:layout_marginLeft="25dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioEdit"/>
    </RelativeLayout>


</LinearLayout>
